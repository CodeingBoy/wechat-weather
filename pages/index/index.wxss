#weather-wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
  width: 100%;
  height: 100%;
}

#temperture{
  font-size: 200rpx;
  line-height: 280rpx;
  text-align: center;
  opacity: 0.8;
}

#weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
}

#weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 760rpx;
}

#forecast-title{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 35rpx;
}

#forecast-title-icon{
  height: 28rpx;
  width: 36rpx;
  margin-right: 10rpx;
}

#forecast-title-text{
  display: inline;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

#forecast-list{
  display: flex;
  height: 300rpx;
  align-items: center;
  white-space: nowrap;
}

.forecast-item{
  display: inline-block;
  height: 100%;
  width: 140rpx;
  flex-shrink: 0;
  text-align: center;
}

.forecast-item view, .forecast-item text{
  display: block;
}

.forecast-item text{
  font-size: 36rpx;
  line-height: 42rpx;
}

.forecast-item image{
  margin-top: 10rpx;
  width: 75rpx;
  height: 75rpx;
}

#today-weather{
  display: flex;
  align-items: center;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

#today-date{
  flex-grow: 2;
  vertical-align: middle;
}

#today-temperature{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

#forecast-page-arrow{
  width: 13rpx;
  height: 24rpx;
}